// 1. ROOT          ==============================

// CSS reset
@import "reset.styl"

// Variables and mixins
@import "variables.styl"
@import "mixins.styl"

// Site wide styles (html, body)
@import "site.styl"

// 2. TYPOGRAPHY      ==============================

// Block level (h1, p) and text-level (em, strong) type
@import "typography.styl"

// 3. COLOUR        ==============================

// Colour interaction semantics
@import "colour.styl"

// 4. TEXTURE         ==============================

// Alerts, badges, boxes and gradients
@import "texture.styl"

// Font Awesome icon fonts (optional)
@import "font-awesome.styl"

// 5. ELEMENTS        ==============================

// Figures, images and other elements
@import "elements.styl"

// Standard form controls
@import "forms.styl"

// Button styles (optional)
@import "buttons.styl"

// Tables
@import "tables.styl"

// 6. LAYOUT      ==============================

// Page level layout styles (banner, navigation, content, contentinfo)
@import "page.styl"

//  7. VENDOR-SPECIFIC    ==============================
//  8. MODERNIZR      ==============================

// @import "modernizr.styl"

//  9. TEMPLATE SPECIFICS   ==============================
//  10. MEDIA QUERIES     ==============================

@media print {
  @import "print.styl"
}

// 480px
@media only screen and (min-width: 480px) {
  @import "480.styl"
}

// 600px
@media only screen and (min-width: 600px) {
  @import "600.styl"
}

// 600px - 768px
@media only screen and (min-width: 600px) and (max-width: 768px) {
  @import "600-768.styl"
}

// 768px
@media only screen and (min-width: 768px) {
  @import "768.styl"
}

// 992px
@media only screen and (min-width: 992px) {
  @import "992.styl"
}

// 1382px
@media only screen and (min-width: 1382px) {
  @import "1382.styl"
}

// 2x
@media only screen and (-webkit-min-device-pixel-ratio: 1.5), only screen and (min--moz-device-pixel-ratio: 1.5), only screen and (min-device-pixel-ratio: 1.5) {
  @import "2x.styl"
}

//  11. UPSTARTS      ==============================

// Modules and panels
@import "upstarts/320andup-modules/upstart.styl"
@import "upstarts/320andup-panels/upstart.styl"

